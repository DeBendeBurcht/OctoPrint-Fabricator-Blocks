<div id="blocks_notifications_wrapper" >
  <div class="container-fluid heading">
    <div class="header" data-bind>
      <i class="far icon-black fa-bell"></i>
       Notifications
    </div>
  </div>
  <div  class="container-fluid body">
    <div class="accordion-inner">
      <div style="display: none" data-bind="visible: blocksNotifications().length > 0">
        <div class="scroll-wrapper blocks_notifications-scrollable" data-bind="foreach: $root.blocksNotifications">
          <div class="blocks_notifications_entry">
            <div class="blocks_notifications_timestamp">
              <!-- <small class="muted" data-bind="text: $root.toDateTimeString($data.timestamp)"></small> -->
            </div>
            <div class="blocks_notifications_message" data-bind="text: message"></div>
          </div>
          <button type="btn btn-block" data-bind="visible: $root.blocksNotifications().length > 0" ><i class="far fa-trash-alt"></i> {{ _('Clear') }}</button>
        </div>
      </div>
      <div style="display: none" data-bind="visible: $root.blocksNotifications().length == 0">
        {{_ ('No notifications to be displayed') }}
      </div>
    </div>
  </div>
</div>
